generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ClockRegistry {
  id              String   @id @default(uuid())
  user_id         String
  category        String
  is_business_day Boolean
  marked_at       DateTime @default(now())

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("clock_registry")
}
